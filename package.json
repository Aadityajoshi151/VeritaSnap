{
  "name": "VeritaSnap",
  "version": "1.0.0",
  "description": "A simple,no hassle screen-shot tool for windows 7.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . VeritaSnap --overwrite --asar=true --platform=win32 --arch=ia32 --extra-resource=assets/shutter.mp3 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"VeritaSnap\"",    
    "package-linux": "electron-packager . VeritaSnap --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "13.2.1",
    "electron-packager": "^15.3.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "sound-play": "^1.1.0"
  }
}
